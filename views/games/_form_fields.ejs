<div class="form-row">
  <div class="form-item">
    <label> Title </label>
    <input type="text" name="title" value="<%= game.title %>" />
  </div>
  <div class="form-item">
    <label> Publisher </label>
    <input type="text" name="publisher" value="<%= game.publisher %>" />
  </div>
  <div class="form-item form-item-no-grow">
    <label> Release Date </label><%= %> <input type="date" name="releaseDate"
    value="<%= game.releaseDate == null ? '' :
    game.releaseDate.toISOString().split("T")[0] %>" />
  </div>
</div>
<div class="form-row">
  <div class="form-item form-item-no-grow">
    <label> Age restrictions</label>
    <input
      type="number"
      name="ageRestrictions"
      value="<%= game.ageRestrictions %>"
    />
  </div>
  <div class="form-item form-item-no-grow">
    <label> Game type </label>
    <input type="text" name="typeOfGame" value="<%= game.typeOfGame %>" />
  </div>
  <div class="form-item">
    <label> Tags </label>
    <input type="text" name="tags" value="<%= game.tags %>" />
  </div>
</div>

<div class="form-row">
  <div class="form-item form-item-no-grow">
    <label> Thumbnail </label>
    <input type="file" name="thumbnail" class="library-img filepond" />
  </div>
  <div class="form-item">
    <label> Description</label>
    <textarea name="description"><%= %> </textarea>
  </div>
</div>
