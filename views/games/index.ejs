<h2 class="page-header">Search games</h2>
<form action="/games" method="GET">
  <div class="form-row">
    <div class="form-item">
      <label>Title</label>
      <input type="text" name="title" value="<%=  %>" />
    </div>
  </div>
  <div class="form-row">
    <div class="form-item">
      <label>Released After</label>
      <input type="date" name="publishedAfter" value="<%=  %>" />
    </div>

    <div class="form-item">
      <label>Released Before</label>
      <input type="date" name="publishedBefore" value="<%=  %>" />
    </div>
  </div>
  <div class="form-row form-row-end">
    <button class="btn btn-primary" type="submit">Search</button>
  </div>
</form>
<div><%- %></div>
